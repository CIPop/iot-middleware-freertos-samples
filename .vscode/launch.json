{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (STM L475)",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/b-l475e-iot01a/demos/projects/ST/b-l475e-iot01a/iot-middleware-sample.elf",
            "MIMode": "gdb",
            "miDebuggerPath": "arm-none-eabi-gdb",
            "miDebuggerServerAddress": "localhost:3333",
            "debugServerPath": "openocd",
            "debugServerArgs": "-f board/stm32l4discovery.cfg",
            "serverStarted": "Listening on port .* for gdb connections",
            "filterStderr": true,
            "stopAtEntry": false,
            "hardwareBreakpoints": {
                "require": true,
                "limit": 6
            },
            "preLaunchTask": "Deploy and halt",
        },
        {
            "name": "STM L475E: Local OpenOCD",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "device": "STM32L475VG",
            "runToMain": true,
            "executable": "${workspaceFolder}/b-l475e-iot01a/demos/projects/ST/b-l475e-iot01a/iot-middleware-sample.elf",
            "svdFile": "${workspaceFolder}/.vscode/STM32L4x5.svd",
            "cwd": "${workspaceRoot}",
            "configFiles": [
                "board/stm32l4discovery.cfg"
            ]
        },        
        {
            "name": "STM L475: Local OpenOCD",
            "type": "cortex-debug",
            "request": "launch",
            "servertype": "openocd",
            "device": "STM32L4S5VI",
            "runToMain": true,
            "executable": "${workspaceFolder}/b-l475e-iot01a/app/stm32l4S5_azure_iot.elf",
            "svdFile": "${workspaceFolder}/.vscode/STM32L4x5.svd",
            "cwd": "${workspaceRoot}",
            "configFiles": [
                "board/stm32l4discovery.cfg"
            ]
        }
        {
            "name": "STM L475E: Remote",
            "type": "cortex-debug",
            "executable": "${workspaceFolder}/b-l475e-iot01a/demos/projects/ST/b-l475e-iot01a/iot-middleware-sample.elf",
            "request": "launch",
            "servertype": "external",
            "gdbTarget": "${input:device.host}",
            "runToMain": true,
            "svdFile": "${workspaceFolder}/.vscode/STM32L4x5.svd",
        },

        {
            "name": "STM L475: Remote",
            "type": "cortex-debug",
            "executable": "${workspaceFolder}/b-l475e-iot01a/demos/projects/ST/b-l475e-iot01a/iot-middleware-sample.elf",
            "request": "launch",
            "servertype": "external",
            "gdbTarget": "${input:device.host}",
            "runToMain": true,
            "svdFile": "${workspaceFolder}/.vscode/STM32L4x5.svd",
        },
    ],
    "inputs": [
        {
            "id": "device.host",
            "type": "promptString",
            "default": "host.docker.internal:3333",
            "description": "The local hostname with port for GDB to connect to"
        }
    ]
}