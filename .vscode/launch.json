{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch (J-Link)",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "program": "${workspaceFolder}/mimxrt1060/demos/projects/NXP/mimxrt1060/iot-middleware-sample.elf",
            "MIMode": "gdb",
            "miDebuggerPath": "arm-none-eabi-gdb",
            "miDebuggerServerAddress": "localhost:3333",
            "debugServerPath": "jlinkgdbservercl",
            "debugServerArgs": "-if swd -speed 4000 -endian little -port 3333 -device MIMXRT1062xxx6A -x ${workspaceFolder}/reset.gdb",
            "serverStarted": "Connected to target",
            "filterStdout": true,
            "stopAtEntry": false,
            // There is no need for hardware breakpoint limits with J-Link probes because they support unlimited flash breakpoints.
            // However, if desired, uncomment below to force use of hardware breakpoints only:
            // "hardwareBreakpoints": {
            //     "require": true,
            //     "limit": 8
            // },
            "preLaunchTask": "Deploy (J-Link)"
        },
        {
            "name": "NXP: Local J-Link",
            "type": "cortex-debug",
            "request": "launch",
            "servertype":"jlink",
            "runToMain": true,
            "executable": "${workspaceFolder}/mimxrt1060/demos/projects/NXP/mimxrt1060/iot-middleware-sample.elf",
            "device": "MIMXRT1062xxx6A",
            "svdFile": "${workspaceFolder}/.vscode/MIMXRT1062.svd",
        },
        {
            "name": "NXP: Remote",
            "type": "cortex-debug",
            "executable": "${workspaceFolder}/mimxrt1060/demos/projects/NXP/mimxrt1060/iot-middleware-sample.elf",
            "request": "launch",
            "servertype": "external",
            "gdbTarget": "${input:device.host}",
            "runToMain": true,
            "device": "MIMXRT1062xxx6A",
            "svdFile": "${workspaceFolder}/.vscode/MIMXRT1062.svd",
        }      
    ],
    "inputs": [
        {
            "id": "device.host",
            "type": "promptString",
            "default": "host.docker.internal:3333",
            "description": "The local hostname with port for GDB to connect to"
        }
    ]
}
